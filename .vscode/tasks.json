{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Generator.exe",
      "type": "shell",
      "command": "dotnet",
      "args": ["build", "-c", "${input:buildConfiguration}"],
      "options": {
        "cwd": "${workspaceFolder}/Generator"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile"
    },
    {
    "label": "run Generator.exe",
    "type": "shell",
    "command": "${workspaceFolder}\\Generator\\bin\\Release\\net9.0\\Generate.exe",
    "options": {
      "cwd": "${workspaceFolder}"
    },
    "group": {
      "kind": "test",
      "isDefault": false
    }
  }
  ],
  "inputs": [
    {
      "id": "buildConfiguration",
      "type": "pickString",
      "description": "Select build configuration",
      "options": ["Debug", "Release"],
      "default": "Release"
    }
  ]
}