{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build WinDevGen.exe",
      "type": "shell",
      "command": ".\\build.bat",
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "build (publish) WinDevGen.exe",
      "type": "shell",
      "command": ".\\build.bat",
      "args": [
        "--publish"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "run WinDevGen.exe (autodownload ESD)",
      "type": "shell",
      "command": "${workspaceFolder}/out/bin/WinDevGen.exe",
      "args": [],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "run WinDevGen.exe (ISO)",
      "type": "process",
      "command": "${workspaceFolder}/out/bin/WinDevGen.exe",
      "args": [
        "--iso=${workspaceFolder}/out/Win11_24H2_English_x64.iso"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ],
}